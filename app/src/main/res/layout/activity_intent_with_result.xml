<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".IntentWithResultActivity">

    <TextView
        android:id="@+id/tvResultData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_number"
        android:layout_marginBottom="@dimen/activity_half_vertical_margin" />

    <RadioGroup
        android:id="@+id/rgNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_50"/>

        <RadioButton
            android:id="@+id/rb100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_100"/>

        <RadioButton
            android:id="@+id/rb150"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_150"/>

        <RadioButton
            android:id="@+id/rb200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_200"/>

    </RadioGroup>

    <Button
        android:id="@+id/btnResultChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose" />

</LinearLayout>