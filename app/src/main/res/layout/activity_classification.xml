<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClassificationActivity">

    <EditText
        android:id="@+id/etClassificationNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_nilai_hint"
        android:inputType="number" />

    <Button
        android:id="@+id/btnClassificationShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/show_title"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvClassificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="Hasil: "
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

</LinearLayout>